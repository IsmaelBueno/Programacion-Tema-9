<Window x:Class="MenuPrincipalEjercicios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tema 9 WPF" MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Initialized="evento_inicializarPrograma">
    
    <StackPanel Background="#FF83AAF0">
        
        <Menu Margin="0,0,0,10">
            <MenuItem>
                <MenuItem.Header>
                    <Hyperlink NavigateUri="https://github.com/IsmaelBueno/Programacion-Tema-9" RequestNavigate="evento_clickMenuGitHub">GitHub</Hyperlink>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Header="Acerca de" Click="evento_clickMenuAcercaDe"/>          
        </Menu>
        
        <Grid x:Name="grd_panelEjercicios" Height="100" Margin="10"/>
            
        <Label Content="*Disponibles actualmente: 1-9,12,13,14,16,18,20 CORRIEGIENDO EL 19 Y EL 27" FontStyle="Oblique" Foreground="red"/>
        <TextBlock x:Name="tbk_informacionejercicio" Margin="100" TextWrapping="Wrap" Text="" FontSize="15" Background="White" Height="150"/>
    </StackPanel>
</Window>
