<Window x:Class="MenuPrincipalEjercicios.VventanaTimpo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VentanaTimpo" Height="215" Width="300">
    <Grid>

        <Label Content="Nuevo tiempo:" FontWeight="Bold" HorizontalAlignment="Left" Margin="30,26,0,0" VerticalAlignment="Top"/>
        <Label Content="Dificultad:" FontWeight="Bold" HorizontalAlignment="Left" Margin="30,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbx_tiempo" HorizontalAlignment="Left" Height="23" Margin="127,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="62" MaxLength="4" FlowDirection="RightToLeft" PreviewTextInput="evento_tbx_ContenidoPrevio"/>
        <RadioButton Content="Fácil" HorizontalAlignment="Left" Margin="127,63,0,0" VerticalAlignment="Top" GroupName="dificultad" IsEnabled="False"/>
        <RadioButton Content="Intermedio" HorizontalAlignment="Left" Margin="127,83,0,0" VerticalAlignment="Top" GroupName="dificultad" IsChecked="True"/>
        <RadioButton Content="Difícil" HorizontalAlignment="Left" Margin="127,103,0,0" VerticalAlignment="Top" GroupName="dificultad" IsEnabled="False"/>
        <Button Content="Aplicar" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="-0.24,2.2" Click="evento_boton_Aplicar" Height="29"/>


    </Grid>
</Window>