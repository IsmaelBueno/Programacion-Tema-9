<Window x:Class="Ejercicio20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio20" Height="400" Width="540"
        ResizeMode="NoResize">
    <Grid Background="LightBlue">
        <ToolBar Height="30" VerticalAlignment="Top">
            <Button Content="Juego nuevo" Margin="5,0,5,0" Click="evento_juegoNuevo"/>
            <Button Content="Salir" Margin="5,0,5,0" Click="evento_salir"/>
        </ToolBar>
        
        <Grid x:Name="grd_tablero" Margin="40" Height="250" Width="250" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>         
        </Grid>
        
        <Label Content="Turno" HorizontalAlignment="Left" Margin="348,50,0,0" VerticalAlignment="Top" Width="100" FontSize="30" FontWeight="Bold"/>
        <Label x:Name="lbl_jugador" Content="jugador 1" FontStyle="Oblique" FontSize="30" Margin="348,100,27,200" HorizontalAlignment="Left"/>


    </Grid>
</Window>
