<Window x:Class="Ejercicio25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejercicio 25" Height="350" Width="300" Initialized="evento_inicializarPrograma"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Pincha en una imagen para tamaño completo" HorizontalAlignment="Center" Margin="16,0,16,29" VerticalAlignment="Bottom" Width="260" Height="35" FontStyle="Oblique"/>
        <Slider x:Name="sld_visor" HorizontalAlignment="Center" Margin="0,0,0,82" VerticalAlignment="Bottom" Width="228" Value="0" Maximum="5" Minimum="0" SmallChange="1" ValueChanged="sld_visor_ValueChanged"/>
        <Image x:Name="img_imagenActual" HorizontalAlignment="Left" Height="175" Margin="40,22,0,0" VerticalAlignment="Top" Width="220" MouseLeftButtonDown="img_imagenActual_MouseLeftButtonDown"/>

    </Grid>
</Window>
